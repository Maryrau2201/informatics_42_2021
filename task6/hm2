#include <iostream>
#include <cmath>

using namespace std;

void translation(int a)
{
    int binar = 0;
    int octal = 0;
    int hex = 0;
    int g = a, h = a;

    for (int i = 0; a > 0; i++)
    {
        binar += (a % 2) * pow(10.0, i);
        a /= 2;
    }

    for (int i = 0; g > 0; i++)
    {
        octal += (g % 8) * pow(10.0, i);
        g /= 8;
    }

    for (int i = 0; h > 0; i++)
    {
        hex += (h % 16) * pow(10.0, i);
        h /= 16;
    }
    cout << binar << endl;
    cout << octal << endl;
    cout << hex << endl;
}
